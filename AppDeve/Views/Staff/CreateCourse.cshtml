@model AppDeve.Models.CategoryCourseModel
@{
    ViewBag.Title = "CreateCourse";
}

<h2>CreateCourse</h2>
@Html.ActionLink("Back", "CourseManagement", null, new { @class = "btn btn-default" })
<br />
@using (Html.BeginForm("CreateCourse", "Staff", "POST"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Name, new { @class = "text-default" })
        @Html.TextBoxFor(m => m.Course.Name, new { @class = "form-default" })
    </div>
    <div class="form-group">
        @Html.Label("Category", new { @class = "text-default" })
        @Html.DropDownListFor(m => m.CategoryId, new SelectList(Model.Categories, "Id", "Name"), new { @class = "dropdown" })
    </div>
    <br />
    <div class="form-group">
        <button type="submit">Create</button>
    </div>
}

