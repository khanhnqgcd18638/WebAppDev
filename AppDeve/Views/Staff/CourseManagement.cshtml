@model List<AppDeve.Models.Course>
@{
    ViewBag.Title = "CourseManagement";
}

<h2>CourseManagement</h2>

@Html.ActionLink("Create", "CreateCourse", "Staff")
@Html.ActionLink("Manage Category", "CategoryView", "Staff")
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Course</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td>
                    @Html.ActionLink("Edit the Task", "Edit", "Todos",
                                 new { id = item.Id },
                                 new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete this task", "Delete", "Todos",
                                 new { id = item.Id },
                                 new { @class = "btn btn-danger" })
                    @Html.ActionLink("Details", "Details", "Todos",
                                 new { id = item.Id },
                                 new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>